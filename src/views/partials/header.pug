header
    a(href="/").header__logo
        i.fab.fa-youtube
        span.headerTitle MyTube
    nav
        ul
            li
                a(href="/search")
                    i.fas.fa-search.search-icon
                        div.headerSearch__box.headerBox Search
            if loggedIn
                li
                    a(href="/videos/upload")
                        i.fas.fa-video.video-icon
                            div.headerVideo__box.headerBox Upload
                li
                    a(href="/users/logout")
                        i.fas.fa-right-from-bracket.logOut-icon
                            div.headerLogout__box.headerBox Log out
                li
                    a(href=`/users/${loggedInUser._id}`)
                        if !loggedInUser.avatarUrl
                            i.fa-solid.fa-face-smile
                        else 
                            img(src=loggedInUser.avatarUrl).header__avatar
            else                        
                li
                    a(href="/login")
                        div.headerLogin__btn 
                            i.far.fa-circle-user
                            span Sign in