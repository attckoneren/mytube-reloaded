extends base.pug
    
block content 
    h4 Change Title of video
    form(method="POST")
        input(name="title" placeholder="Video Title" value=video.title required)
        input(name="description" placeholder="Description" type="text" minlength=10 value=video.description required) 
        input(name="hashtags" placeholder="Hashtags separated by comma" type="text" value=video.hashtags.join() required) 
        input(type="submit" value="save") 